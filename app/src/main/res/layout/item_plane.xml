<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/item_rounded"
        android:elevation="2dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvOnboardNumberTitle"
            style="@style/ClickableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Бортовой номер"
            android:textAppearance="@style/BaseText"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1234" />

        <TextView
            android:id="@+id/tvOnboardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/BaseText.Big"
            app:layout_constraintTop_toBottomOf="@+id/tvOnboardNumberTitle"
            tools:text="1234" />

        <TextView
            android:id="@+id/tvFlightNumberTitle"
            style="@style/ClickableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Номер рейса"
            android:textAppearance="@style/BaseText"
            app:layout_constraintTop_toBottomOf="@+id/tvOnboardNumber"
            tools:text="34543" />

        <TextView
            android:id="@+id/tvFlightNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/BaseText.Big"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightNumberTitle"
            tools:text="12345" />

        <TextView
            android:id="@+id/tvAdditionalInfo"
            style="@style/ClickableView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Дополнительно"
            android:textAppearance="@style/BaseText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightNumber" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>