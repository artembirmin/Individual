<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_screen"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/bg_toolbar"
                app:navigationIcon="@drawable/ic_back_arrow">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Заказ"
                    android:textAppearance="@style/ToolbarTitle" />

                <ImageView
                    android:id="@+id/btnDelete"
                    style="@style/ClickableView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="12dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_delete_24" />

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp">


                <DatePicker
                    android:id="@+id/dpOrderDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Время отправки"
                    android:textAppearance="@style/BaseText"
                    app:layout_constraintBottom_toTopOf="@+id/tpOrderTime"
                    app:layout_constraintStart_toEndOf="@+id/tpOrderTime"
                    app:layout_constraintStart_toStartOf="@+id/dpOrderDate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дата отправки"
                    android:textAppearance="@style/BaseText"
                    app:layout_constraintBottom_toTopOf="@+id/dpOrderDate"
                    app:layout_constraintStart_toStartOf="@+id/dpOrderDate" />

                <TimePicker
                    android:id="@+id/tpOrderTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    android:timePickerMode="spinner"
                    app:layout_constraintTop_toBottomOf="@+id/dpOrderDate"
                    tools:layout_editor_absoluteX="0dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Время доставки в днях"
                    android:textAppearance="@style/BaseText"
                    app:layout_constraintBottom_toTopOf="@+id/etDeliveryTimeInWorkDays"
                    app:layout_constraintStart_toStartOf="@+id/etDeliveryTimeInWorkDays" />

                <EditText
                    android:id="@+id/etDeliveryTimeInWorkDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    android:digits="0123456789"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@+id/tpOrderTime" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Откуда отправлено"
                    android:textAppearance="@style/BaseText"
                    app:layout_constraintBottom_toTopOf="@+id/etDeliveryFrom"
                    app:layout_constraintStart_toStartOf="@+id/etDeliveryFrom" />

                <EditText
                    android:id="@+id/etDeliveryFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/etDeliveryTimeInWorkDays" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вес в граммах"
                    android:textAppearance="@style/BaseText"
                    app:layout_constraintBottom_toTopOf="@+id/etWeight"
                    app:layout_constraintStart_toStartOf="@+id/etWeight" />

                <EditText
                    android:id="@+id/etWeight"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/etUnpaidAmount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Куда отправлено"
                    android:textAppearance="@style/BaseText"
                    app:layout_constraintBottom_toTopOf="@+id/etDeliveryTo"
                    app:layout_constraintStart_toStartOf="@+id/etDeliveryTo" />

                <EditText
                    android:id="@+id/etDeliveryTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/etDeliveryFrom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Стоимость"
                    android:textAppearance="@style/BaseText"
                    app:layout_constraintBottom_toTopOf="@+id/et_amount"
                    app:layout_constraintStart_toStartOf="@+id/et_amount" />

                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="40dp"
                    android:digits="0123456789"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@id/etDeliveryTo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Валюта"
                    android:textAppearance="@style/BaseText"
                    app:layout_constraintBottom_toTopOf="@+id/et_currency"
                    app:layout_constraintStart_toStartOf="@+id/et_currency" />

                <EditText
                    android:id="@+id/et_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_amount"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Неоплаченная стоимость"
                    android:textAppearance="@style/BaseText"
                    app:layout_constraintBottom_toTopOf="@+id/etUnpaidAmount"
                    app:layout_constraintStart_toStartOf="@+id/etUnpaidAmount" />

                <EditText
                    android:id="@+id/etUnpaidAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    android:digits="0123456789"
                    android:inputType="number"
                    app:layout_constraintTop_toBottomOf="@+id/et_currency"
                    tools:layout_editor_absoluteX="16dp" />

                <Button
                    android:id="@+id/btnSave"
                    style="@style/BaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    android:text="Сохранить"
                    app:layout_constraintTop_toBottomOf="@id/etWeight" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>